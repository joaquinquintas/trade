{% extends "member/base.html" %}{% load i18n %}
{% block title %}{{ block.super }} {% trans "Control Panel"%}{% endblock %}

{% block styles %}
  <style type="text/css">

    tbody tr{
      cursor: pointer;
    }

  </style>
{% endblock %}

{% block scripts %}
  <script type="text/javascript">
  $(document).ready(function() {


    {% if welcome_message %}
      $('#hi_message').delay(7000).slideUp();
    {% endif %}
   });

  $(function() {

    $('#mainNav li a[href={% url "member_home" %}]').addClass('active');
    });

  </script>
{% endblock %}


{% block wideContent %}

  {% if welcome_message %}
    <div id="hi_message" class="notice">
    {% trans "Hello" %} {{user.first_name|capfirst}}. {% trans "You have successfully signed into MiCambio.com!"%}
      </div>
  {% endif %}

  <div class="sectionHead">
    <h2 class="strong">Dashboard</h2>
    <p><span class="strong">{% trans "Welcome to MiCambio.com!" %}</span> {% trans "The Dashboard page provides you a quick summary of your transactions." %}</p>
  </div>

  {% include "member/member_quick-inc.html" %}
{% endblock %}


{% block narrowContent %}
  <ul class="sideNav">
    <li class="borderBottom">
      <a class="primaryAct" title="{% trans 'New Product'%}" id="new-product-id" href="{% url "product_add" %}">{% trans 'New Product'%}</a>
    </li>
      {% include "contact/send_love-inc.html" %}
  </ul>
{% endblock %}
