{% extends "member/base.html" %}{% load i18n %}
{% block title %}{{ block.super }} {% trans "Profile"%} {% endblock %}

{% block scripts %}
<script type="text/javascript">
  $(function() {

    $('#mainNav li a[href={% url perfil_edit %}]').addClass('active');
    });

</script>
{% endblock %}

{% block content %}
<div id="content" class="wrapper container_12 clearFix">
  <div class="grid_9">

    <div class="sectionHead">
      <h2 class="strong">{% trans "Edit your Profile"%}</h2>
      <p>{% blocktrans %}
      You can edit your profile so your personal info will be more clear for future trades.
      {% endblocktrans %}
    </p>
    </div>

    <form class="horizForm grayPanel" method="POST" action="">
      <fieldset class="content">

        {% for field in form %}
              <div class="item clearFix row {% if field.errors %} rowError {% endif %} {% if field.required %} required {% endif %}">
               <label class="text" for="{{ field.label }}">{{ field.label }} :</label>
            <div class="fieldInput">
              {{field}}
              {% if field.errors %}{{field.errors}}{% endif %}
            </div>
            </div>
          {% endfor %}

            <div class="item action clearFix">
          <button class="button" type="submit" name="{% trans 'Save'%}">{% trans 'Save'%}</button>

            </div>

      </fieldset>
    </form>
  </div>

</div><!-- end #content -->
{% endblock %}