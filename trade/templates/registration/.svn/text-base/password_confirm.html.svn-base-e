{% extends "base.html" %}

{% block title %}Enter new password{% endblock %}

{% block content %}

<div id="content" class="wrapper container_12 clearFix">
  <div class="grid_12">
    <form method="POST" action="">

      <fieldset>
      <h2 class="legend">Ingresa una nueva clave</h2>
      <p>Porfavor ingrese la nueva clave dos veces asi podemos confirmar que no haya errores.</p>
      {% for e in form.errors.all %}
      {{ e }}
      {% endfor %}
      <p class="aligned wide">
      <label for="id_new_password1">Nueva Clave:</label><input type="password" name="new_password1" id="id_new_password1" /></p>
      <p class="aligned wide"><label for="id_new_password2">Confirmacion Clave:</label><input type="password" name="new_password2" id="id_new_password2" /></p>
      <p><input type="submit" value="Cabiar mi Clave" /></p>

      </fieldset>
    </form>
  </div>
</div>
{% endblock %}